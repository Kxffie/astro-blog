---
import Layout from "./Layout.astro";
import { slugify } from "../../js/utils";

const { frontmatter } = Astro.props;
const { title, date, author, tags, readTime } = frontmatter;
console.log(frontmatter);
---

<Layout title={`AIDevBlog | ${title}`}>
	<div class="max-w-4xl mx-auto font-bold prose text-gray-800">
		<p
			class="p-8 lg:my-8 mb-2 text-6xl font-bold text-center text-white lg:rounded-3xl bg-gradient-to-r from-pink-500 to-violet-500"
		>
			{title}
		</p>
		<div class="flex justify-between">
			<p class="text-gray-500">
				{date} &#x2022; {readTime} &#x2022; By <a
					class="hover:underline"
					href={`/author/${slugify(author)}`}>{author}</a
				>
			</p>
			<p class="text-gray-500">
				{
					tags.map((tag: any) => (
						<span class="px-2 py-1 mr-2 text-sm font-medium leading-5 text-gray-800 bg-gray-200 rounded-full">
							{tag}
						</span>
					))
				}
			</p>
		</div>

		<slot />
	</div>
</Layout>
